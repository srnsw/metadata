{
    "$schema": "http://json-schema.org/schema#",
    "definitions": {
        "agent": {
            "oneOf": [
                { 
                    "type": "object",
                    "properties":{
                        "person":{"$ref":"#/definitions/person"}
                    },
                    "required": [
                        "person"
                    ],
                "additionalProperties": false
                },
                { 
                    "type": "object",
                    "properties":{
                        "organisation":{"$ref":"#/definitions/organisation"}
                    },
                    "required": [
                        "organisation"
                    ],
                "additionalProperties": false
                }
            ]
        },
        "organisation": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "agencyID":{
                    "type": "number"
                }
            },
            "required": [
                "name"
            ],
            "additionalProperties": false
        },
        "person": {
            "type": "object",
                "properties": {
                    "surname": {
                        "type": "string"
                    },
                    "firstname": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "organisation": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/organisation"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                
            },
            "minProperties": 1,
            "additionalProperties": false
        },
        "W3CDate": {
            "type": "string",
            "pattern": "^([\\+-]?\\d{4}(?!\\d{2}\b))((-?)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))?|W([0-4]\\d|5[0-2])(-?[1-7])?|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6])))([T\\s]((([01]\\d|2[0-3])((:?)[0-5]\\d)?|24\\:?00)([\\.,]\\d+(?!:))?)?(\\17[0-5]\\d([\\.,]\\d+)?)?([zZ]|([\\+-])([01]\\d|2[0-3]):?([0-5]\\d)?)?)?)?$"
        },
        "url": {
            "type": "string",
            "pattern": "^(?:(?:https?|ftp)?:?\\/\\/)(?:\\S+(?::\\S*)?@)?(?:(?!(?:10|127)(?:\\.\\d{1,3}){3})(?!(?:169\\.254|192\\.168)(?:\\.\\d{1,3}){2})(?!172\\.(?:1[6-9]|2\\d|3[0-1])(?:\\.\\d{1,3}){2})(?:[1-9]\\d?|1\\d\\d|2[01]\\d|22[0-3])(?:\\.(?:1?\\d{1,2}|2[0-4]\\d|25[0-5])){2}(?:\\.(?:[1-9]\\d?|1\\d\\d|2[0-4]\\d|25[0-4]))|(?:(?:[a-z\\u00a1-\\uffff0-9]+-?)*[a-z\\u00a1-\\uffff0-9]+)(?:\\.(?:[a-z\\u00a1-\\uffff0-9]+-?)*[a-z\\u00a1-\\uffff0-9]+)*(?:\\.(?:[a-z\\u00a1-\\uffff]{2,})))(?::\\d{2,5})?(?:\\/[^\\s]*)?$"
        },
        "mimetype": {
            "type": "string",
            "pattern": "[\\w+\\*-]+/[\\w\\*+-]+"
        },
        "versionNumber": {
            "type": "number",
            "minimum": 0
        },
        "version": {
            "type": "object",
            "properties": {
                "version": {"$ref": "#/definitions/versionNumber"},
                "files":{
                    "type":"array",
                    "items":[{"$ref": "#/definitions/file"}],
                    "additionalProperties": false,
                    "minItems": 1,
                    "uniqueItems": true
                }
            },           
            "required": [ "files","version"]            
        },
        "file": {
            "type": "object",
            "required": [ "name", "path", "fileSize"],
            "properties": {
                "name": {"type": "string"},
                "path": {"type":"array", "items":[{"type":"string"}]},
                "migrationAction": {
                    "type": "object", 
                    "properties": {
                        "pathway": {"$ref": "#/definitions/url"},
                        "agent": {"$ref": "#/definitions/agent"},
                        "generated": {"$ref": "#/definitions/W3CDate"}
                        }
                },
                "format": {"type": "string"},
                "mimeType": {"$ref": "#/definitions/mimetype"},
                "fileSize": {"type": "number","minimum": 0},
                "display":{"type":"boolean"}
            },
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "consignmentId": {
            "type": "string"
        },
        "created": {
            "$ref": "#/definitions/W3CDate"
        },
        "creators": {
            "type": "array",
            "items": {
                    "$ref": "#/definitions/agent"
            }
        },
        "recipients": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/agent"
            }
        },
        "attachedTo": {
            "type": "string"
        },
        "versions": {
            "type": "array",
            "items": {"$ref": "#/definitions/version"},
            "uniqueItems": true
        },
        "series": {
            "type": "number"
        },
        "disposalRule": {
            "type": "object",
            "properties": {
                "authority": {
                    "type": "string"
                },
                "class": {
                    "type": "string"
                }
            },
            "required": [
                "authority",
                "class"
            ],
            "additionalProperties": false
        },
        "accessRule": {
            "type": "object",
            "properties": {
                "accessDirection": {
                    "type": "number"
                },
                "effect": {
                    "type": "string",
                    "enum": [
                        "Early",
                        "OPA",
                        "CPA"
                    ]
                },
                "calculateFrom": {
                    "$ref": "#/definitions/W3CDate"
                }
            },
            "required": [
                "accessDirection",
                "effect"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "title",
        "series",
        "disposalRule",
        "accessRule"
    ],
    "additionalProperties": false
}
